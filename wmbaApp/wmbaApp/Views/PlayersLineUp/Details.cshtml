@model wmbaApp.Models.PlayersLineUp

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @*  <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.player.FullName)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.player.FullName)
        </dd> *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.TmName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TmName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameLocation)
        </dd>
        <dt class="col-sm-2">
            Players
        </dt>
        <dd class="col-sm-10">
            @foreach (var player in Model.Players)
            {
                <span>@player.PlyrFirstName</span>
                <span>, </span>
            }
        </dd>
    </dl>
</div>



<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to Players List</a>
</div>
@section scripts {
    <script>
        GenerateContextHelp(["<p>This page shows you a player's details.</p>",
            "<p>Click the Back to Players list button to go back to the players list.</p>"]);
    </script>
}
